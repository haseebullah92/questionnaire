<div class="py-5 my-5 text-center card" id={{ this.question.identifier }}>
  <div class="card-body">
    <h2>Question {{ this.index }}</h2>
    <p class="lead">Q. {{ this.question.headline }}</p>
    <br class="mb-4">
    <form class="needs-validation">
      <div class="row">
            <div class="col-sm-12 col-md-6 offset-md-3 mb-3">
              {{#each this.question.choices as |choice index|}}
              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="checkbox{{ this.index }}-{{ index }}">
                <label class="custom-control-label" for="checkbox{{ this.index }}-{{ index }}" value="{{ choice.value }}">{{ choice.label }}</label>
              </div>
              {{/each}}
              <div class="invalid-feedback">
                *required.
              </div>
            </div>
      </div>
      <br class="mb-4">
      <button class="btn btn-primary" {{on "click" this.submit}} type="button" type="submit">Next</button>
    </form> 
  </div>      
</div>